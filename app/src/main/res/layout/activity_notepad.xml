<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chrisantuseze.hadum.Notification.Note.Notepad"
    tools:showIn="@layout/activity_notepad">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toplayout"
        android:layout_alignParentTop="true"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="No title"
            android:fontFamily="serif"
            android:layout_toRightOf="@+id/title_text1"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:imeOptions="actionNext"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notelist_date"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:paddingRight="10sp"
            android:textSize="12sp"
            android:hint="17/10/2017"/>
    </RelativeLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body"
        android:layout_below="@+id/toplayout"
        class="com.example.chrisantuseze.hadum.Notification.Note.Notepad$LineEditText"
        android:background="@android:color/transparent"
        android:capitalize="sentences"
        android:fadingEdge="vertical"
        android:gravity="top"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textSize="20sp"/>

</RelativeLayout>
