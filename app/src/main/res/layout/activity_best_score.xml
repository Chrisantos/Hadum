<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrisantuseze.hadum.Quiz.BestScore"
    android:background="@drawable/quiz3">
    <include layout="@layout/main_app_bar" android:id="@+id/main_page_toolbar"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:id="@+id/linear1">

    <android.support.v7.widget.CardView
        android:layout_width="145dp"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tsports"
            android:text="Sports"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/best_score"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sportscore"
                android:text="72"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="145dp"
          android:layout_height="40dp"
          android:layout_marginLeft="15dp">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tpolitics"
                  android:text="Politics"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="5dp"/>
              <RelativeLayout
                  android:layout_width="32dp"
                  android:layout_height="32dp"
                  android:background="@drawable/best_score"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="3dp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/politicsscore"
                      android:text="72"
                      android:textColor="@color/white"
                      android:textSize="18sp"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"/>
              </RelativeLayout>
          </RelativeLayout>

      </android.support.v7.widget.CardView>
  </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/linear2"
        android:layout_below="@id/linear1"
        android:layout_marginTop="50dp">

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tgeo"
                    android:text="Geography"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/best_score"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geographyscore"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/treligion"
                    android:text="Religion"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/best_score"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/religionscore"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/linear3"
        android:layout_below="@id/linear2"
        android:layout_marginTop="50dp">

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tfuto"
                    android:text="FUTO"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/best_score"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/futoscore"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ttech"
                    android:text="Technology"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/best_score"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/technologyscore"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>

</RelativeLayout>
