<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrisantuseze.hadum.Nav.Academia">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:background="@drawable/sug_logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.507">



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/card_course"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_course"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/courses"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/txt_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_course"
                    android:gravity="center"
                    android:text="Courses"
                    android:textColor="@color/academia"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_results"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_results"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/results"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/txt_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/img_results"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="Results"
                    android:textColor="@color/academia"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/card_books"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_books"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/book" />

                <TextView
                    android:id="@+id/txt_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_books"
                    android:gravity="center"
                    android:text="Books"
                    android:textColor="@color/academia"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--android.support.v7.widget.CardView
            android:id="@+id/card_q_n_a"
