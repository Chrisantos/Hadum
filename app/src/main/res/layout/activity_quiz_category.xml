<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrisantuseze.hadum.Quiz.QuizCategory"
    android:background="@drawable/quiz">
    <include layout="@layout/main_app_bar" android:id="@+id/main_page_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


            <android.support.v7.widget.CardView
                android:id="@+id/card_sports"
                android:layout_width="120dp"
                android:layout_height="130dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_sports"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/sports" />

                    <TextView
                        android:id="@+id/txt_sports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/img_sports"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="Sports"
                        android:textColor="@color/notif"
                        android:textSize="14sp"
                        android:fontFamily="casual" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/card_politics"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_politics"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/politics" />

                    <TextView
                        android:id="@+id/txt_politics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/img_politics"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="Politics"
                        android:textColor="@color/notif"
                        android:textSize="14sp"
                        android:fontFamily="casual" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_below="@id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card_geography"
                android:layout_width="120dp"
                android:layout_height="130dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_geography"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/globe" />

                    <TextView
                        android:id="@+id/txt_geography"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/img_geography"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="Geography"
                        android:textColor="@color/notif"
                        android:textSize="14sp"
                        android:fontFamily="casual" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/card_religion"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/l4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_religion"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/bible" />

                    <TextView
                        android:id="@+id/txt_religion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/img_religion"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="Religion"
                        android:textColor="@color/notif"
                        android:textSize="14sp"
                        android:fontFamily="casual" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_tech"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/linearLayout2"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/l5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_tech"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tech" />

                    <TextView
                        android:id="@+id/txt_tech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/img_tech"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="Technology"
                        android:textColor="@color/notif"
                        android:textSize="14sp"
                        android:fontFamily="casual" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
