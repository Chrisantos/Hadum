<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrisantuseze.hadum.Notification.Mute.Mute_Phone">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Choose when to mute your phone"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:textSize="20sp"
    app:layout_constraintHorizontal_bias="0.507"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/hour"
    app:layout_constraintVertical_bias="0.367"
    android:id="@+id/textView"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/hour"
        android:hint="Enter Hour (e.g 11)"
        android:clickable="false"
        android:layout_marginLeft="8dp"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.484"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/minute"
        android:text="0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/minute"
        android:hint="Enter Minute (e.g 40)"
        android:text="0"
        android:clickable="false"
        android:inputType="numberDecimal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/hour"
        app:layout_constraintLeft_toLeftOf="@+id/hour"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="311dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/minute"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.276"
        android:text="Set"/>


</android.support.constraint.ConstraintLayout>
