<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chrisantuseze.hadum.Assistant.Mute.Mute_Phone">
    <include layout="@layout/main_app_bar" android:id="@+id/main_page_toolbar"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/mutephone_background"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/books">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time Until Ringer Mode\n\t\t\t\t Turns Normal "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="45dp"
        android:textSize="22sp"
        android:id="@+id/label" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/books"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/mutephone_background"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Hour:"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/books"
            android:fontFamily="casual"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerhour">

        </Spinner>

    </LinearLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/setMute"
            android:text="Set"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"/>


        </LinearLayout>


</LinearLayout>
